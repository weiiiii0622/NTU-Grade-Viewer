{
  "manifest_version": 3,

  "name": "NTU 選課小幫手",
  "description": "A chrome plugin for the purpose of showing each course's score distribution on the site '台大課程網'",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png",
      "64": "icon.png",
      "128": "icon.png",
      "512": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
