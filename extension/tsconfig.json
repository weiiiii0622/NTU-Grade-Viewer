{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "jsxImportSource": "@emotion/react",
        "moduleResolution": "bundler",
        "module": "ES2022",
        "esModuleInterop": true,
        "sourceMap": false,
        // "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ES2023",
            "DOM"
        ],
        "paths": {
            "@/*": [
                "./@/*"
            ]
        },
        "baseUrl": "."
    },
}